<Window x:Class="CIS499_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="314" xmlns:my="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero">
    <Grid>
        <StatusBar Height="23" HorizontalAlignment="Left" Margin="0,288,0,0" Name="statusBar1" VerticalAlignment="Top" Width="120" />
        <ListBox HorizontalAlignment="Left" Margin="3,41,0,0" Name="listBox3" VerticalAlignment="Top" Height="241" Width="277">
            <ListBoxItem>
                <Expander Header="Online" Height="110" Name="expander1" Width="234" Margin="5" IsExpanded="False" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid>
                        <ListBox Height="82" HorizontalAlignment="Left" Margin="1,6,0,0" Name="listBox1" VerticalAlignment="Top" Width="{Binding ElementName=expander1, Path=ActualWidth}" />
                    </Grid>
                </Expander>
            </ListBoxItem>
            <ListBoxItem>
                <Expander Header="Offline" Height="110" Name="expander2" Width="234" Margin="5,5,5,0" IsExpanded="False" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid>
                        <ListBox Height="100" HorizontalAlignment="Left" Margin="1,6,0,0" Name="listBox2" VerticalAlignment="Top" Width="{Binding ElementName=expander2, Path=ActualWidth}" />
                    </Grid>
                </Expander>
            </ListBoxItem>
        </ListBox>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="Logged in as:" VerticalAlignment="Top" Width="210" />
    </Grid>
</Window>
